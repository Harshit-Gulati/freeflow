generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id         String   @id @default(cuid())
  title      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  authorId   String
  authorName String
  imageUrl   String
  orgId      String

  favorites UserFavorite[]
  shapes    CanvasShape[]
}

model CanvasShape {
  id        String   @id @unique
  boardId   String
  data      Json
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
  @@map("shapes")
}

model UserFavorite {
  id      String @id @default(cuid())
  userId  String
  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([userId, boardId])
  @@index([userId])
}
